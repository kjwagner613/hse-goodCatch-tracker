<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Good Catch</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="background-image">
      <div class="form-container">
        <h1>Create Good Catch</h1>
          <form method="POST" action="/users/<%= user._id %>/catches">
          <label for="site">Site:</label>
          <select id="site" name="site" required>
            <option value="" disabled selected>Please select one</option>
            <% companySites.forEach(function(site) { %>
            <option value="<%= site %>"><%= site %></option>
            <% }); %>
          </select>
          <br />
          <label for="department">Department:</label>
          <select id="department" name="department" required>
            <option value="" disabled selected>Please select one</option>
            <% corpDepartments.forEach(function(department) { %>
            <option value="<%= department %>"><%= department %></option>
            <% }); %>
          </select>
          <br />
          <label for="event">Event Category:</label>
          <select id="event" name="event" required>
            <option value="" disabled selected>Please select one</option>
            <% eventCategories.forEach(function(category) { %>
            <option value="<%= category %>"><%= category %></option>
            <% }); %>
          </select>
          <br />
          <label for="description">Description:</label>
          <textarea id="description" name="description" required></textarea>
          <br />
          <button type="submit">Create</button>
        </form>
        <p>You have submitted <%= totalCount %> good catches.</p>

<% for (const category in categoryCounts) { %>
  <p><%= categoryCounts[category] %> <%= category %></p>
<% } %>

        <% if (successMessage && successMessage.length > 0) { %>
        <p style="color: #fbff01; font-size: 1.5em; text-align: center; margin: 10px;"><%= successMessage %></p>
        <% } %>

  </body>
</html>
