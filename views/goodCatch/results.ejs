<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read Good Catches</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Read Good Catches</h1>
    <form id="resultsForm" method="GET" action="/goodCatch/search">
        <label for="user">User:</label>
        <input type="text" id="user" name="user">
        <label for="site">Site:</label>
        <input type="text" id="site" name="site">
        <label for="area">Area:</label>
        <input type="text" id="area" name="area">
        <label for="department">Department:</label>
        <input type="text" id="department" name="department">
        <label for="date">Date:</label>
        <input type="date" id="date" name="date">
        <button type="submit">Search</button>
    </form>
    <button id="showRecentCatches">Click here to list all good catches created in the last 30 days</button>
    <ul id="recentCatchesList" style="display: none;">
        <% goodCatches.forEach(function(goodCatch) { %>
            <li><%= goodCatch.title %> - <%= goodCatch.description %></li>
        <% }); %>
    </ul>
    <ul id="searchResultsList">
        <% if (searchResults && searchResults.length > 0) { %>
            <% searchResults.forEach(function(result) { %>
                <li><%= result.title %> - <%= result.description %></li>
            <% }); %>
        <% } else { %>
            <li>No results found</li>
        <% } %>
    </ul>
    <script>
        document.getElementById('showRecentCatches').addEventListener('click', function() {
            document.getElementById('recentCatchesList').style.display = 'block';
        });
    </script>
</body>
</html>